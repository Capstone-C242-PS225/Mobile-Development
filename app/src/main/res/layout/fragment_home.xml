<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.HomeFragment">

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hi, User Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Points Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_points"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_points_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Points"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/tv_points_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_points_title"
                android:layout_marginTop="8dp"
                android:text="9,305"
                android:textColor="@color/blue"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Favorite Features Section -->
    <TextView
        android:id="@+id/tv_favorite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Favorit Anda"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/card_points"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="386dp"
        android:layout_height="413dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/grid_home"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_title">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="451dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingBottom="32dp"
            android:rowCount="2">

            <!-- Floating Button 1 - Materi -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="Materi"
                android:src="@drawable/icon_demo"
                app:backgroundTint="@color/grid_home" />

            <!-- Floating Button 2 - Self Check -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="Self Check"
                android:src="@drawable/icon_demo"
                app:backgroundTint="@color/grid_home" />

            <!-- Floating Button 3 - Spending Score -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="Spending Score"
                android:src="@drawable/icon_demo"
                app:backgroundTint="@color/grid_home" />

            <!-- Floating Button 4 - Coming Soon -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/fab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="Coming Soon"
                android:src="@drawable/icon_demo"
                app:backgroundTint="@color/grid_home" />

            <!-- Floating Button 5 - Coming Soon -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/fab5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="Coming Soon"
                android:src="@drawable/icon_demo"
                app:backgroundTint="@color/grid_home" />

            <!-- Floating Button 6 - Coming Soon -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/fab6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="Coming Soon"
                android:src="@drawable/icon_demo"
                app:backgroundTint="@color/grid_home" />

        </androidx.gridlayout.widget.GridLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>